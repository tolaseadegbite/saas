<% provide(:title, "My Businesses") %>

<div class="container d-block pt-4 w-75">
    <div class="row">
        <% @businesses.each do |business| %>
            <div class="col-md-6 mb-3">
                <%= link_to business, class: 'text-dark text-decoration-none' do %>
                    <div class="card shadow text-center h-100 border-0 rounded-0" style="background: #041c11">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h1 class="card-title h4 my-3" style="color: palegoldenrod"><i class="bi bi-buildings" style="color: gold"></i>
                                <%= business.name %></h5>
                                <h6 class="card-subtitle text-secondary mb-2"><small><%= business.category.name %></small></h6>
                            </div>

                            <div class="pb-3">
                                <p class="card-text m-0" style="color: #becbbe"><%= business.description.truncate(100) %></p>
                            </div>

                            <div class="pt-3">
                                <div class="d-flex justify-content-between w-50 mx-auto text-white">
                                    <span style="color: #becbbe">
                                        <p class="m-0">150</p>
                                        <p class="m-0 fw-medium">Customers</p>
                                    </span>
                                    <span>
                                        <p class="m-0">3</p>
                                        <p class="m-0 fw-medium">Stores</p>
                                    </span>
                                    <span>
                                        <p class="m-0"><%= business.products.count %></p>
                                        <p class="m-0 fw-medium">Products</p>
                                    </span>
                                </div>
                            </div>

                        </div>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>
</div>
