<%= form_with model: business do |f| %>
    
    <div class="mb-3">
        <%= f.label :business_category, class: 'fw-medium mb-2' %>
        <% unless f.object.new_record? %>
            <%= f.select :category_id, Category.all.pluck(:name, :id), { include_blank: "Select category", selected: @business.category.id }, class: "form-control" %>
        <% else %>
            <%= f.select :category_id, Category.all.pluck(:name, :id), { include_blank: "Select category" }, class: "form-control" %>
        <% end %>
    </div>
    
    <div class="mb-3">
        <%= f.label :name, class: 'fw-medium mb-2' %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="mb-3">
        <%= f.label :description, class: 'fw-medium mb-2' %>
        <%= f.text_area :description, placeholder: "Describe your business", class: "w-100 form-control mb-4" %>
    </div>


    <div class="d-flex justify-content-end">
        <%= f.button 'Create', class: "btn btn-success" %>
    </div>
<% end %>