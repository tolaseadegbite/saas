<div class="col-md-6 mb-3">
    <%= link_to business, class: 'text-dark text-decoration-none' do %>
        <div class="card shadow-sm text-center h-100 border-2 rounded-3">
            <div class="card-body d-flex flex-column justify-content-between">
                <div>
                    <h1 class="card-title h4 my-3"><i class="bi bi-buildings" style="color: gold"></i>
                    <%= business.name %></h5>
                    <h6 class="card-subtitle text-secondary mb-2"><small><%= business.category.name %></small></h6>
                </div>

                <div class="pb-3">
                    <p class="card-text m-0"><small><%= business.description.truncate(100) %></small></p>
                </div>

                <div class="pt-3">
                    <div class="d-flex justify-content-between w-75 mx-auto text-white">
                        <span>
                            <p class="m-0">150</p>
                            <p class="m-0 fw-bold">Customers</p>
                        </span>
                        <span>
                            <p class="m-0">3</p>
                            <p class="m-0 fw-bold">Stores</p>
                        </span>
                        <span>
                            <p class="m-0"><%= business.products_count %></p>
                            <p class="m-0 fw-bold">Products</p>
                        </span>
                    </div>
                </div>

            </div>
        </div>
    <% end %>
</div>