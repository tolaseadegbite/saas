<% provide(:title, "Sign up") %>

<h1 class="text-center mt-4 mb-5">
  <%= link_to root_path, class: 'text-white', style: 'letter-spacing: 5px' do %>
  <i class="bi bi-buildings" style="color: #a6cba6;"></i>
    SAAS
  <% end %>
</h1>

<div class="container bg-white shadow d-block py-5 px-4" style="max-width: 450px;">

  <h2 class="h6 fw-light text-center mb-4", style='letter-spacing: 2px'>ACCOUNT SETTINGS</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-3">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email address', autocomplete: "email", class: 'rounded-0 form-control-lg form-control' %>
    </div>

    <div class="field mb-3">
      <%= f.text_field :firstname, autofocus: true, placeholder: 'Firstname', autocomplete: "firstname", class: 'rounded-0 form-control-lg form-control' %>
    </div>

    <div class="field mb-3">
      <%= f.text_field :surname, autofocus: true, placeholder: 'Surname', autocomplete: "surname", class: 'rounded-0 form-control-lg form-control' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field mb-3">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Enter password (leave blank if you don\'t want to change it)', class: 'rounded-0 form-control-lg form-control' %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field mb-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password', class: 'rounded-0 form-control-lg form-control' %>
    </div>

    <div class="field mb-3">
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: 'Current password (needed to confirm changes)', class: 'rounded-0 form-control-lg form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-success w-100 rounded-1' %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <h3 class="h6"><small>Cancel my account</small></h3>

    <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn btn-outline-danger rounded-1', style:"--bs-btn-padding-y: .1rem; --bs-btn-padding-x: .3rem; --bs-btn-font-size: .7rem;" %></div>
  </div>

</div>

<div class="text-center mt-3 mb-4">
  <%= link_to "Back", :back, class: 'text-white' %>
</div>
