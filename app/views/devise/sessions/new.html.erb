<% provide(:title, "Log In") %>

<h1 class="h3 text-center mt-4 mb-5">
  <%= link_to root_path, class: 'text-white', style: 'letter-spacing: 5px' do %>
  <i class="bi bi-buildings" style="color: #a6cba6;"></i>
    SAAS
  <% end %>
</h1>

<div class="container bg-white shadow d-block py-5 px-4" style="max-width: 450px;">
  <h2 class="h6 fw-light text-center mb-4", style='letter-spacing: 2px'>LOGIN</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-3">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email address', autocomplete: "email", class: 'rounded-0 form-control-lg form-control' %>
    </div>

    <div class="field mb-3">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'rounded-0 form-control-lg form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-success w-100 rounded-1' %>
    </div>
  <% end %>

</div>

<div class="text-center mt-4 text-white">
  <%= render "devise/shared/links" %>
</div>
